<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>CloudOS administration</title>
	<link rel="stylesheet" href="css/app.css">
	<script src="js/app.js"></script>
	<script src="js/apps/setup-app.js"></script>
	<script src="localize?js/local/strings.js"></script>
</head>
<body>

<script type="text/x-handlebars">
	<section class="app-bar">
		<nav class="top-bar" data-top-bar>
			<ul class="title-area">
				<li class="name">
					<h1>
						<a class="brand" href="#">{{t app.title}} <!--active_account={{active_account.name}}--></a>
					</h1>
				</li>
			</ul>
		</nav>
	</section>

	{{outlet}}
</script>

<script type="text/x-handlebars" id="index">
	<section class="deck">
		<div class="row-fluid">
			<div class="medium-7 large-7 medium-centered columns">
				<form {{action 'doSetup' on="submit"}}>
					<fieldset class="wrap-set">
						<legend>{{t sections.setup}}</legend>
						<div class="field-container">
							<div class="row">
								<div class="small-5 columns">
									<label for="right-label" class="right msg-mod">{{t forms.setup.accountName}}</label>
								</div>
								<div class="small-5 columns">
									{{input type="text" value=name}}
								</div>
								<div class="small-2 columns">
									{{#if requestMessages.error.name}}
										<span class="message error right">{{requestMessages.error.name}}</span>
									{{/if}}
								</div>
							</div>
						</div>
						<div class="field-container">
							<div class="row">
								<div class="small-5 columns">
									<label for="right-label" class="right msg-mod">{{t forms.setup.firstName}}</label>
								</div>
								<div class="small-5 columns">
									{{input type="text" value=firstName}}
								</div>
								<div class="small-2 columns">
									{{#if requestMessages.error.firstName}}
										<span class="message error right">{{requestMessages.error.firstName}}</span>
									{{/if}}
								</div>
							</div>
						</div>
						<div class="field-container">
							<div class="row">
								<div class="small-5 columns">
									<label for="right-label" class="right msg-mod">{{t forms.setup.lastName}}</label>
								</div>
								<div class="small-5 columns">
									{{input type="text" value=lastName}}
								</div>
								<div class="small-2 columns">
									{{#if requestMessages.error.lastName}}
										<span class="message error right">{{requestMessages.error.lastName}}</span>
									{{/if}}
								</div>
							</div>
						</div>
						<div class="field-container">
							<div class="row">
								<div class="small-5 columns">
									<label for="right-label" class="right msg-mod">{{t forms.setup.mobilePhoneCountryCode}}</label>
								</div>
								<div class="small-5 columns">
									{{input type="text" value=mobilePhoneCountryCode}}
								</div>
								<div class="small-2 columns">
									{{#if requestMessages.error.mobilePhoneCountryCode}}
										<span class="message error right">{{requestMessages.error.mobilePhoneCountryCode}}</span>
									{{/if}}
								</div>
							</div>
						</div>
						<div class="field-container">
							<div class="row">
								<div class="small-5 columns">
									<label for="right-label" class="right msg-mod">{{t forms.setup.mobilePhone}}</label>
								</div>
								<div class="small-5 columns">
									{{input type="text" value=mobilePhone}}
								</div>
								<div class="small-2 columns">
									{{#if requestMessages.error.mobilePhone}}
										<span class="message error right">{{requestMessages.error.mobilePhone}}</span>
									{{/if}}
								</div>
							</div>
						</div>
						<div class="field-container">
							<div class="row">
								<div class="small-5 columns">
									<label for="right-label" class="right msg-mod">{{t forms.setup.recoveryEmail}}</label>
								</div>
								<div class="small-5 columns">
									{{input type="text" value=email}}
								</div>
								<div class="small-2 columns">
									{{#if requestMessages.error.email}}
										<span class="message error right">{{requestMessages.error.email}}</span>
									{{/if}}
								</div>
							</div>
						</div>
						<div class="field-container">
							<div class="row">
								<div class="small-5 columns">
									<label for="right-label" class="right msg-mod">{{t forms.setup.initialPassword}}</label>
								</div>
								<div class="small-5 columns">
									{{input type="password" value=initialPassword}}
								</div>
								<div class="small-2 columns">
									{{#if requestMessages.error.initialPassword}}
										<span class="message error right">{{requestMessages.error.initialPassword}}</span>
									{{/if}}
								</div>
							</div>
						</div>
						<div class="field-container">
							<div class="row">
								<div class="small-5 columns">
									<label for="right-label" class="right msg-mod">{{t forms.setup.password}}</label>
								</div>
								<div class="small-5 columns">
									{{input type="password" value=password}}
								</div>
								<div class="small-2 columns">
									{{#if requestMessages.error.password}}
										<span class="message error right">{{requestMessages.error.password}}</span>
									{{/if}}
								</div>
							</div>
						</div>
						<div class="field-container">
							<div class="row">
								<div class="small-5 columns">
									<label for="right-label" class="right msg-mod">{{t forms.setup.password2}}</label>
								</div>
								<div class="small-5 columns">
									{{input type="password" value=password2}}
								</div>
								<div class="small-2 columns">
									{{#if requestMessages.error.password2}}
										<span class="message error right">{{requestMessages.error.password2}}</span>
									{{/if}}
								</div>
							</div>
						</div>
						<div class="field-container">
							<div class="row">
								<div class="small-5 columns">
									<label for="right-label" class="right msg-mod">{{t forms.setup.time_zone}}</label>
								</div>
								<div class="small-5 columns">
									<label for="select"></label>

									<select id="setupTZfield">
									{{#each item in timeZones}}
										{{#if item.dfault}}
											<option value="{{item.id}}" selected>{{item.offset}} {{item.lname}}</option>
										{{else}}
											<option value="{{item.id}}">{{item.offset}} {{item.lname}}</option>
										{{/if}}
									{{/each}}
									</select>
									<br /><br />
								</div>
								<div class="small-2 columns">
									&nbsp;
								</div>
							</div>
						</div>
						<div class="field-container">
							<div class="large-5 columns hide-for-small">
								&nbsp;
							</div>
							<div class="large-5 small-10 columns">
								<button type="submit" class="expand" {{action 'doSetup'}}>{{t forms.setup.setup_button}}</button>
							</div>
							<div class="large-2 columns hide-for-small">
							</div>
						</div>
					</fieldset>
				</form>
			</div>
		</div>
	</section>
</script>

</body>
</html>
