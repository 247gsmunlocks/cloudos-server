dn: olcDatabase={0}config,cn=config
changetype: modify
add: olcSaslHost
olcSaslHost: central.cloudstead.io
-
add: olcSaslRealm
olcSaslRealm: cloudstead.realm
-
add: olcSaslSecProps
olcSaslSecProps: noplain,noactive,noanonymous,minssf=56
-
add: olcAuthzRegexp
olcAuthzRegexp: {0}"uid=([^/]*),cn=cloudstead.io,cn=GSSAPI,cn=auth" "uid=$1,ou=people,dc=cloudstead,dc=io"
olcAuthzRegexp: {1}"uid=host/([^/]*).cloudstead.io,cn=cloudstead.io,cn=gssapi,cn=auth" "cn=$1,ou=hosts,dc=cloudstead,dc=io"
olcAuthzRegexp: {2}"uid=ldap/admin,cn=cloudstead.io,cn=gssapi,cn=auth" "cn=admin,cn=config"